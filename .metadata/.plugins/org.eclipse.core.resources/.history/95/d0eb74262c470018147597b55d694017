class HelloWorld {
	
	public static void main (String args[]){
		
		Scanner modulas = new Scanner (System.in);
		
		int fnum, snum, result;
		 System.out.println("Enter your first number: ");
		 
		 fnum = modulas.nextInt();
		 
		 System.out.println("Enter the your second number : ");
		 
		 snum = modulas.nextInt();
		 
		 result = fnum % snum;
		 
		 System.out.println("Here is the reminder: " + result);
	}
	
	
}